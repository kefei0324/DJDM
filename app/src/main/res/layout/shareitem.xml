<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/session"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ssdk_oks_classic_wechat"
            android:gravity="center"
            android:background="@drawable/shape_txt"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:text="好友"/>
    <TextView
            android:id="@+id/timeline"
            android:background="@drawable/shape_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ssdk_oks_classic_wechatmoments"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="朋友圈"/>
    <TextView
            android:background="@drawable/shape_txt"
            android:id="@+id/favorite"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ssdk_oks_classic_wechatfavorite"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="收藏"/>
    <TextView
            android:background="@drawable/shape_txt"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ssdk_oks_classic_wechatfavorite"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="从严治党"/>
</LinearLayout>