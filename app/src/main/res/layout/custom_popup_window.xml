<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/channel_bg">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:gravity="center"
        android:text="请输入用户名"/>
    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="1"
        android:gravity="top"
        android:background="@drawable/popwindow_bg"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textSize="14sp"
        android:maxLength="10"
        android:hint="请输入姓名"/>
    <LinearLayout
        android:id="@+id/seekBer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:textSize="14sp"
            android:textColor="@color/hui_text"
            android:text="上报进度"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/progress_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/hui_text"
                android:layout_marginLeft="12dp"
                android:text="0"/>
            <SeekBar
                android:id="@+id/seekBer"
                android:layout_marginTop="5dp"
                android:maxHeight="8dp"
                android:minHeight="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/prompt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="12sp"
            android:textColor="@color/hui_text"
            android:text="姓名长度2~10个字符"/>
        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="@color/white"
            android:background="@drawable/cancel_btn_bg"
            android:textSize="14dp"
            android:text="取消"/>
        <TextView
            android:id="@+id/determine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/login_btn_bg"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="确定"/>
    </LinearLayout>
</LinearLayout>